extends base.pug

block scripts 
  script(src="../static/j1.js")
block style 
    style 
      include ../static/style.css
      include ../static/contact.css
block content 
    h1 Contact Us
    form(action="/contact" method="post")
      div.form
        label(for="myinp") Name
        input(type="text" placeholder="Enter your name" name="name" class="myinp" )
        label(for="myinp") Age
        input(type="text" placeholder="Enter your age " name="age" class="myinp" )
        label(for="myinp" style="display:block") Gender:
        input(type="text" name="gender" class="myinp" )
        label(for="myinp") Phone no 
        input(type="tel" name="phno" class='myinp' )
        label(for="myinp") Enter your concern
        textarea(name="text" class="myinp" cols="60" rows="6" style="display:block")  
        input(type="submit" id="myinp")
